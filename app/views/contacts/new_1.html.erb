<h3>Warning. You must assign an company. Otherwise the record will not save.</h3>

<%= form_for(@contact) do |f| %>
  <div class="field">
    <%= f.label :company %><br />
    <%= f.text_field :company %>
  </div>


  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>


  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :email_address %><br />
    <%= f.text_field :email_address %>
  </div>

    <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_field :notes %>
  </div>

  <div class="actions">
    <%= f.submit "Add Contact"%>
  </div>
<% end %>

