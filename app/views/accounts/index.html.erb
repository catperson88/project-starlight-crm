<table class="table-expand">
  <thead>
    <tr class="table-expand-row">
      <th width="200">Accounts</th>
      <th>Account name</th>
      <th class="text-right" width="150">Account City</th>
      <th width="150">Account State</th>
    </tr>
  </thead>


    <tr>
        <td><%=link_to "Add an Account", new_account_path %></td>
        <td></td>
        <td></td>
        <td></td>
    </tr>

  <tbody>
  <%@Accounts.each do |account|%>
    <tr class="table-expand-row" data-open-details>
  </tr>
    <tr class="table-expand-row" data-open-details>
      <td></td>
      <td><%=link_to account.name, account%></td>
      <td class="text-right"><%=account.city%></td>
      <td><%= account.state%> <span class="expand-icon"></span></td>
    </tr>
    <%end%>

    