<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">




<h2>Create a new Company for <%= @account.name %></h3>
<%= form_for([@account, @company]) do |f| %>

    <div class="form-icons">
      <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-user"></i>
      </span>
      <% f.label :name %>
      <%= f.text_field :name, placeholder: "Name" %>
    </div>

    <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-envelope"></i>
      </span>
      <% f.label :address %>
      <%= f.text_field :address, placeholder: "Street Address" %>
    </div>

    <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-key"></i>
      </span>
      <% f.label :city %>
      <%= f.text_field :city, placeholder: "City" %>
    </div>
    <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-key"></i>
      </span>
      <% f.label :state %>
      <%= f.text_field :state, placeholder: "State" %>
    </div>
    <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-key"></i>
      </span>
      <% f.label :zip %>
      <%= f.text_field :zip, placeholder: "ZIP Code" %>
    </div>
    <div class="input-group">
      <span class="input-group-label">
        <i class="fa fa-key"></i>
      </span>
      <% f.label :description %>
      <%= f.text_field :description, placeholder: "Description" %>
    </div>
  <div class="actions">
    <%= f.submit "Create Company"%>
  </div>
  </div>
  <% end %>

